<script>
  $('#create-network').modal();
</script>

<ul class="nav nav-list">
  <li class="nav-header">Network Actions</li>
  <li><a href="#" onclick="$('#create-network').modal('show');"><i class="icon-plus"></i>Create new network</a></li>
</ul>

<div class="modal hide" id="create-network">
  <form class="form-horizontal" method="post" action="/network">
    <input type="hidden" name="_method" value="put">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Create a new network</h3>
    </div>

    <div class="modal-body">
      <div class="control-group">
        <label class="control-label" for="network-description">Description</label>
        <div class="controls">
          <input id="network-description" name="network-description" placeholder="ex: optopus-network">
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="network-address">Network Address</label>
        <div class="controls">
          <input id="network-address" name="network-address" placeholder="10.1.10.0">
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="network-bits">Network Bits</label>
        <div class="controls">
          <select name="network-bits" id="network-bits">
            <% (1..32).each do |i| %>
              <option><%= i %></option>
            <% end %>
          </select>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="network-vlan-id">VLAN ID</label>
        <div class="controls">
          <input id="network-vlan-id" name="network-vlan-id" placeholder="100">
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="network-location-name">Location</label>
        <div class="controls">
          <select name="network-location-id" id="network-location-name">
            <% locations.each do |location| %>
              <option value="<%= location.id %>"><%= location.common_name %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn" data-dismiss="modal">Cancel</button>
      <button type="submit" class="btn btn-primary">Create</button>
    </div>

  </form>
</div>
