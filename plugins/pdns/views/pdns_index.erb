<script>
  $('#powerdns').addClass('active');
</script>
<div class="row">
  <div class="span12">
    <div class="hero-unit">
      <h1>Select a domain</h1>
      <p>Select a domain that you would like to modify records for</p>
    </div>
    <table class="table table-striped table-condensed table-sort">
      <thead>
        <tr><th>Domains</th></tr>
      </thead>
      <tbody>
        <% @domains.each do |domain| %>
          <tr><td><a href="/pdns/domain/<%= domain['id'] %>"><%= domain['name'] %></a></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
