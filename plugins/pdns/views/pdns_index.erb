<script>
  $('#powerdns').addClass('active');
</script>
<div class="row-fluid">
  <% if is_admin? || is_authorized?(:dns_admin) %>
    <div class="span2">
      <ul class="nav nav-list">
        <li class="nav-header">PDNS Actions</li>
        <li><a data-toggle="modal" href="#add-domain"><i class="icon-plus"></i> Add a domain</a></li>
      </ul>
    </div>
  <% end %>
  <div class="span10">
    <header class="jumbotron subhead">
      <h1>Select a domain</h1>
      <p class="lead">Select a domain that you would like to modify records for</p>
    </header>
    <table class="table table-striped table-condensed table-sort">
      <thead>
        <tr><th>Domains</th></tr>
      </thead>
      <tbody>
        <% @domains.each do |domain| %>
          <tr><td><a href="/pdns/domain/<%= domain['id'] %>"><%= domain['name'] %></a></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="modal hide" id="add-domain">
  <form class="form-horizontal" method="post" action="/pdns/domain">
    <input type="hidden" name="_method" value="put">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">x</button>
      <h3>Add a new domain</h3>
    </div>

    <div class="modal-body">
      <div class="control-group">
        <label class="control-label" for="name">Name</label>
        <div class="controls">
          <input type="text" id="name" name="name">
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <input type="submit" value="Save" class="btn btn-primary">
      <button class="btn" data-dismiss="modal">Cancel</button>
    </div>
  </form>
</div>
